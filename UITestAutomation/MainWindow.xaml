<Window x:Class="MouseMacroWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UI Test Automation by logan" Height="500" Width="910">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Left -->
        <StackPanel Grid.Column="0" Margin="6" VerticalAlignment="Top">
            <TextBlock FontWeight="Bold" FontSize="14" Text="Controls" Margin="0,0,0,8"/>

            <WrapPanel>
                <Button x:Name="BtnRecord" Width="120" Height="32" Margin="4" Click="BtnRecord_Click">Record</Button>
                <Button x:Name="BtnStopRecord" Width="120" Height="32" Margin="4" Click="BtnStopRecord_Click" IsEnabled="False">Stop Record</Button>
                <Button x:Name="BtnSave" Width="120" Height="32" Margin="4" Click="BtnSave_Click" IsEnabled="False">Save JSON</Button>
            </WrapPanel>

            <WrapPanel Margin="0,8,0,0">
                <Button x:Name="BtnLoad" Width="120" Height="32" Margin="4" Click="BtnLoad_Click">Load JSON</Button>
                <Button x:Name="BtnPlay" Width="120" Height="32" Margin="4" Click="BtnPlay_Click" IsEnabled="False">Play</Button>
                <Button x:Name="BtnStopPlay" Width="120" Height="32" Margin="4" Click="BtnStopPlay_Click" IsEnabled="False">Stop</Button>
            </WrapPanel>

            <Border Margin="0,12,0,8" Padding="8" BorderBrush="#DDD" BorderThickness="1" CornerRadius="6">
                <StackPanel>
                    <TextBlock FontWeight="Bold" FontSize="13" Text="Calibration"/>
                    <WrapPanel Margin="0,6,0,2">
                        <Button x:Name="BtnCalibStart" Width="140" Height="30" Margin="4" Click="BtnCalibStart_Click">Start Calibration</Button>
                        <Button x:Name="BtnCalibClear" Width="130" Height="30" Margin="4" Click="BtnCalibClear_Click">Clear Calibration</Button>
                    </WrapPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Width="90" Text="OffsetX:"/>
                        <TextBlock x:Name="LblOffX" Width="80" Text="-" />
                        <TextBlock Width="90" Text="OffsetY:"/>
                        <TextBlock x:Name="LblOffY" Width="80" Text="-" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                        <TextBlock Width="90" Text="ContentW:"/>
                        <TextBlock x:Name="LblCW" Width="80" Text="-" />
                        <TextBlock Width="90" Text="ContentH:"/>
                        <TextBlock x:Name="LblCH" Width="80" Text="-" />
                    </StackPanel>
                    <TextBlock x:Name="LblCalibHint" Margin="0,6,0,0" TextWrapping="Wrap"
                     Text="Click Start Calibration, then click the CONTENT Top-Left and Bottom-Right of target window."/>
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <CheckBox x:Name="ChkUseAdb" Margin="0,0,8,0"
                  Checked="ChkUseAdb_Checked" Unchecked="ChkUseAdb_Unchecked"/>
                <TextBlock VerticalAlignment="Center">Use ADB for playback</TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <TextBlock Width="110" VerticalAlignment="Center">Device W × H</TextBlock>
                <TextBox x:Name="TxtDevW" Width="80" Margin="4" Text="1080" IsEnabled="False"/>
                <TextBox x:Name="TxtDevH" Width="80" Margin="4" Text="2400" IsEnabled="False"/>
            </StackPanel>

            <TextBlock Margin="0,10,0,0" TextWrapping="Wrap">
        Stop playback: <Bold>Ctrl + Alt + X</Bold>
            </TextBlock>

            <TextBlock Margin="0,12,0,0" FontWeight="Bold">Status:</TextBlock>
            <TextBlock x:Name="TxtStatus" Text="Idle" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Right -->
        <StackPanel Grid.Column="1" Margin="6,0,0,0">
            <TextBlock FontWeight="Bold" FontSize="14" Text="Recorded Events (Double-click to remove)" Margin="0,0,0,8"/>
            <ListBox x:Name="ListEvents" Height="210" MouseDoubleClick="ListEvents_MouseDoubleClick"/>
            <TextBlock FontWeight="Bold" FontSize="14" Margin="0,10,0,6"
                 Text="JSON Preview / Edit (DelayMs Default :  1000, Edit enable)"/>
            <TextBox x:Name="TxtJson" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
               HorizontalScrollBarVisibility="Auto" Height="140" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
